{
  "name": "lighthouse",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "extension:build": "pnpm --filter lighthouse-extension run build",
    "extension:watch": "pnpm --filter lighthouse-extension run watch",
    "extension:lint": "pnpm --filter lighthouse-extension run lint",
    "extension:test": "pnpm --filter lighthouse-extension run test",
    "extension:package": "pnpm --filter lighthouse-extension exec vsce package --out packages/extension/dist/lighthouse.vsix",
    "extension:publish": "pnpm --filter lighthouse-extension exec vsce publish",
    "extension:install": "pnpm extension:package && code --install-extension packages/extension/dist/lighthouse.vsix --force",
    "extension:dev": "code --extensionDevelopmentPath=packages/extension"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.3.2",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  }
}
