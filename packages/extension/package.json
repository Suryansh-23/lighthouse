{
  "name": "lighthouse-extension",
  "displayName": "Lighthouse",
  "description": "EVM address intelligence for VS Code",
  "version": "0.0.1",
  "private": true,
  "publisher": "lighthouse",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "Background indexing and networking are disabled until the workspace is trusted."
    }
  },
  "activationEvents": [
    "onCommand:lighthouse.inspectAddress",
    "onCommand:lighthouse.openExplorer",
    "onCommand:lighthouse.copyAddress",
    "onCommand:lighthouse.addToAddressBook",
    "onCommand:lighthouse.removeFromAddressBook",
    "onCommand:lighthouse.reindexWorkspace",
    "onCommand:lighthouse.revealOccurrences",
    "onCommand:lighthouse.clearCache",
    "onCommand:lighthouse.setExplorerApiKey",
    "onView:lighthouseAddressBook",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:solidity",
    "onLanguage:json",
    "onLanguage:yaml",
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "lighthouse.inspectAddress",
        "title": "Inspect Address...",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.openExplorer",
        "title": "Open Explorer",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.copyAddress",
        "title": "Copy Address",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.addToAddressBook",
        "title": "Add to Address Book",
        "category": "Lighthouse",
        "icon": "$(pin)"
      },
      {
        "command": "lighthouse.removeFromAddressBook",
        "title": "Remove from Address Book",
        "category": "Lighthouse",
        "icon": "$(x)"
      },
      {
        "command": "lighthouse.reindexWorkspace",
        "title": "Re-index Workspace Addresses",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.revealOccurrences",
        "title": "Reveal Address Occurrences",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.clearCache",
        "title": "Clear Cache",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.setExplorerApiKey",
        "title": "Set Explorer API Key",
        "category": "Lighthouse"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lighthouseAddressBook",
          "name": "Address Book",
          "icon": "media/lighthouse.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "lighthouse.reindexWorkspace",
          "when": "view == lighthouseAddressBook"
        }
      ],
      "view/item/context": [
        {
          "command": "lighthouse.openExplorer",
          "when": "view == lighthouseAddressBook && viewItem == lighthousePinnedAddress"
        },
        {
          "command": "lighthouse.openExplorer",
          "when": "view == lighthouseAddressBook && viewItem == lighthouseIndexedAddress"
        },
        {
          "command": "lighthouse.copyAddress",
          "when": "view == lighthouseAddressBook && viewItem == lighthousePinnedAddress"
        },
        {
          "command": "lighthouse.copyAddress",
          "when": "view == lighthouseAddressBook && viewItem == lighthouseIndexedAddress"
        },
        {
          "command": "lighthouse.inspectAddress",
          "when": "view == lighthouseAddressBook && viewItem == lighthousePinnedAddress"
        },
        {
          "command": "lighthouse.inspectAddress",
          "when": "view == lighthouseAddressBook && viewItem == lighthouseIndexedAddress"
        },
        {
          "command": "lighthouse.revealOccurrences",
          "when": "view == lighthouseAddressBook && viewItem == lighthousePinnedAddress"
        },
        {
          "command": "lighthouse.revealOccurrences",
          "when": "view == lighthouseAddressBook && viewItem == lighthouseIndexedAddress"
        },
        {
          "command": "lighthouse.addToAddressBook",
          "when": "view == lighthouseAddressBook && viewItem == lighthouseIndexedAddress"
        },
        {
          "command": "lighthouse.removeFromAddressBook",
          "when": "view == lighthouseAddressBook && viewItem == lighthousePinnedAddress",
          "group": "inline"
        },
        {
          "command": "lighthouse.addToAddressBook",
          "when": "view == lighthouseAddressBook && viewItem == lighthouseIndexedAddress",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Lighthouse",
      "properties": {
        "lighthouse.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Lighthouse features."
        },
        "lighthouse.detection.fileGlobs": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["**/*.{ts,tsx,js,jsx,sol,rs,go,py,yml,yaml,json,toml,md}"],
          "description": "File globs to scan for addresses."
        },
        "lighthouse.ui.hover.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover cards for addresses."
        },
        "lighthouse.ui.codelens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens for addresses."
        },
        "lighthouse.chains.mode": {
          "type": "string",
          "enum": ["workspaceLimited", "userAll", "singleChain"],
          "default": "workspaceLimited",
          "description": "Chain scanning strategy."
        },
        "lighthouse.chains.workspaceAllowlist": {
          "type": "array",
          "items": { "type": "number" },
          "default": [1, 10, 137, 42161, 8453],
          "description": "Workspace chain allowlist."
        },
        "lighthouse.chains.userChains": {
          "type": "array",
          "default": [],
          "description": "User-defined chain configurations."
        },
        "lighthouse.rpc.roundRobin": {
          "type": "boolean",
          "default": true,
          "description": "Rotate across RPC endpoints per chain."
        },
        "lighthouse.rpc.cooldownBaseMs": {
          "type": "number",
          "default": 1000,
          "description": "Base cooldown in milliseconds for failing RPCs."
        },
        "lighthouse.rpc.maxRetriesBeforeDisable": {
          "type": "number",
          "default": 10,
          "description": "Disable an RPC after this many failures."
        },
        "lighthouse.explorer.default": {
          "type": "string",
          "enum": ["routescan", "blockscout", "etherscan"],
          "default": "routescan",
          "description": "Default explorer for address navigation."
        },
        "lighthouse.explorer.openInExternalBrowser": {
          "type": "boolean",
          "default": true,
          "description": "Open explorer links in the system browser."
        },
        "lighthouse.cache.ttlSeconds": {
          "type": "number",
          "default": 86400,
          "description": "Cache TTL in seconds."
        },
        "lighthouse.net.maxConcurrentRequests": {
          "type": "number",
          "default": 8,
          "description": "Maximum concurrent address resolves in the active document."
        },
        "lighthouse.security.respectWorkspaceTrust": {
          "type": "boolean",
          "default": true,
          "description": "Disable background indexing in untrusted workspaces."
        }
      }
    }
  },
  "scripts": {
    "build": "pnpm --filter @lighthouse/shared build && pnpm --filter @lighthouse/engine build && tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "pnpm run build && node ./dist/test/runTest.js"
  },
  "dependencies": {
    "@lighthouse/engine": "workspace:*",
    "@lighthouse/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.88.0",
    "@vscode/test-electron": "^2.4.0",
    "mocha": "^10.4.0"
  }
}
