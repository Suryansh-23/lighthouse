{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Lighthouse Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/extension"],
      "outFiles": ["${workspaceFolder}/packages/extension/dist/**/*.js"],
      "preLaunchTask": "build-extension"
    }
  ]
}
